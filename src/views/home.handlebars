<h1>Mis Productos</h1>

<div class="contenedorProductos">
    {{#each productos}}
    <div class="card">
        <p>{{this.title}}</p>
        <p>{{this.description}}</p>
        <p>{{this.price}}</p>
        <button>Agregar al carrito</button>
    </div>
    {{/each}}
    {{#if hasPrevPage}}
<a href="/products?page={{prevPage}}">Anterior</a>
{{/if}}
{{#if hasNextPage}}
<a href="/products?page={{nextPage}}">Siguiente</a>
{{/if}}

<p>{{currentPage}} de {{totalPages}}</p>
</div>
